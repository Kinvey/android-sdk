<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">


    <TextView android:text="@string/custom_endpoints_description"
              style="@style/usecase_description" android:gravity="left"/>

    <LinearLayout style="@style/usecase_row">
        <LinearLayout
                style="@style/usecase_row_label"/>
        <Button android:id="@+id/endpoint_basic_hitit"
                android:text="try it"
                style="@style/usecase_action_button"/>
    </LinearLayout>
    <LinearLayout style="@style/usecase_row">
        <LinearLayout
                style="@style/usecase_row_label"/>
        <Button android:id="@+id/endpoint_typed_hitit"
                android:text="try it with generics[]"
                style="@style/usecase_action_button"/>
    </LinearLayout>
    <LinearLayout style="@style/usecase_row">
        <LinearLayout
                style="@style/usecase_row_label"/>
        <Button android:id="@+id/endpoint_typed_single_hitit"
                android:text="try it with generics"
                style="@style/usecase_action_button"/>
    </LinearLayout>


    <TextView android:id="@+id/endpoint_basic_result" android:layout_width="match_parent"  android:text="(response)"    android:layout_height="wrap_content" />
    </LinearLayout>

    </ScrollView>
</LinearLayout>