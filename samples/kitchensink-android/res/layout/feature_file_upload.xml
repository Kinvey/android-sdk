<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/ghost_white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/my_content"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">


        <LinearLayout
                style="@style/usecase_row"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/file_upload_contents"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:hint="Enter file contents!"
                    style="@style/usecase_description"/>


            <TextView
                    android:text="@string/file_upload_description"
                    style="@style/usecase_description"/>


            <LinearLayout android:layout_width="match_parent" android:layout_height="2dp"
                          android:background="@color/kinvey_orange"/>

            <TextView android:id="@+id/file_upload_progress"
                      android:singleLine="false"
                      android:minLines="5"
                      style="@style/usecase_description"/>


        </LinearLayout>


    </FrameLayout>


    <LinearLayout
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/file_upload_button"
                style="@style/usecase_action_button"
                android:text="Upload"/>

    </LinearLayout>


</LinearLayout>