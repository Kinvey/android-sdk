<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.kinvey.sample.contentviewr"
      android:versionCode="1"
      android:versionName="1.0">


    <uses-sdk android:minSdkVersion="14"/>


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />


    <permission
            android:name="com.kinvey.sample.contentviewr.permission.C2D_MESSAGE"
            android:protectionLevel="signature" />
    <uses-permission
            android:name="com.kinvey.sample.contentviewr.permission.C2D_MESSAGE" />
    <!-- This app has permission to register and receive data message. -->
    <uses-permission
            android:name="com.google.android.c2dm.permission.RECEIVE" />


    <application
            android:name=".ContentViewrApplication"
            android:label="@string/app_name"
            android:icon="@drawable/icon"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar"
            >
            
        <activity android:name=".Contentviewr"
                  android:label="@string/app_name"
                  android:launchMode="singleTop"
                >

        </activity>

        <activity android:name=".SettingsActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
                  </activity>


        <!-- offline -->
        <service
                android:name="com.kinvey.android.offline.KinveySyncService"
                android:exported="true" android:process=":backgroundsync" >
            <intent-filter>
                <action android:name="com.kinvey.android.ACTION_OFFLINE_SYNC" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </service>

        <!-- push -->
        <receiver
                android:name="com.kinvey.sample.contentviewr.push.GCMReceiver"
                android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.kinvey.sample.contentviewr" />
            </intent-filter>
        </receiver>
        <service android:name="com.kinvey.sample.contentviewr.push.GCMService" />
    </application>
</manifest>
